{
  "compilerOptions": {
    "lib": ["ES2017"],
    "module": "commonjs",
    "target": "ES2017",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
