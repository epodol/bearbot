{
  "name": "bearbot",
  "version": "0.2.0",
  "description": "The Bear Bot Discord Bot",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "docker:build": "docker build -t epodol/bearbot:$npm_package_version .",
    "docker:save": "docker save -o ./dist/bearbot-$npm_package_version.tar epodol/bearbot:$npm_package_version",
    "docker:run": "docker run -d --env-file ./config epodol/bearbot:$npm_package_version",
    "docker:load": "docker load -i ./dist/bearbot-$npm_package_version.tar"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/epodol/bearbot.git"
  },
  "author": "epodol",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/epodol/bearbot/issues"
  },
  "homepage": "https://github.com/epodol/bearbot",
  "dependencies": {
    "discord.js": "^12.5.3",
    "dotenv": "^10.0.0",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "eslint": "^7.27.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.3.0"
  }
}
